<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NoteTrip</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NoteTrip.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@500;700&family=Playfair+Display&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="travel-icon">🧳</span>NoteTrip
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">🏠 Home</a>
                        </li>
                        <li class="nav-item"></li>
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Documentation">📄 Documentation</a>
                        </li>
                        @if (Context.Session.GetString("login") != null) 
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Country" asp-action="Index">🌏 Countries</a>
                            </li>
                        }
                        @if (Context.Session.GetString("login") != null) 
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Region" asp-action="Index">🏕️ Regions</a>
                            </li>
                        }
                        @if (Context.Session.GetString("login") != null) 
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="City" asp-action="Index">🌆 Cities</a>
                            </li>
                        }
                        @if (Context.Session.GetString("login") != null) 
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="TouristAttraction" asp-action="Index">⛪ Attractions</a>
                            </li>
                        }
                        @if (Context.Session.GetString("login") != null) 
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Statistics" asp-action="Index">📑 Statistics</a>
                            </li>
                        }
                        @if (Context.Session.GetString("login") != null) 
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Map" asp-action="Show">🗺️ Map</a>
                            </li>
                        }
                        @if (Context.Session.GetString("login") != null) 
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Board" asp-action="Show">🏆 Board</a>
                            </li>
                        }
                    </ul>
                    @if (Context.Session.GetString("login") != null)
                    {
                        <div class="d-flex align-items-center">
                            <span class="me-3 text-white fw-bold">🌍 Hello, @Context.Session.GetString("login")!</span>
                            <form asp-controller="Login" asp-action="LogOut" method="post" class="d-inline">
                                <button type="submit" class="btn btn-outline-light btn-sm">Log out</button>
                            </form>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        <div class="main-container">
            @RenderBody()
        </div>
    </main>

    <footer>
        <div class="container">
            &copy; 2025 - NoteTrip 🗺️ - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
