@{
    ViewData["Title"] = "Login";
}

<link href="https://fonts.googleapis.com/css2?family=Raleway:wght@500&family=Playfair+Display&display=swap" rel="stylesheet" />

<style>
    body {
        font-family: 'Raleway', sans-serif;
        background-color: #fcf8f3;
    }

    .login-container {
        max-width: 400px;
        margin: 5rem auto;
        padding: 2rem;
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 16px rgba(0,0,0,0.07);
        text-align: center;
        border: 1px solid #e5d8c4;
    }

    .login-container h1 {
        font-family: 'Playfair Display', serif;
        font-size: 1.8rem;
        margin-bottom: 1.5rem;
        color: #5b4636;
    }

    .validation-info {
        color: #b30000;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    label {
        font-weight: 600;
        color: #5b4636;
        display: block;
        margin-bottom: 0.3rem;
        text-align: left;
    }

    input.form-control {
        margin-bottom: 1rem;
        border: 1px solid #d5c4af;
        border-radius: 6px;
        padding: 0.5rem;
    }

    button.btn-primary {
        background-color: #5b4636;
        border: none;
        color: #fcefd9;
        padding: 0.5rem 1rem;
        font-weight: 600;
        border-radius: 6px;
        width: 100%;
        transition: background-color 0.2s ease-in-out;
    }

    button.btn-primary:hover {
        background-color: #745b47;
    }

    .register-link {
        margin-top: 1rem;
        display: block;
        font-size: 0.95rem;
        color: #5b4636;
        text-decoration: none;
    }

    .register-link:hover {
        text-decoration: underline;
    }
</style>

<div class="login-container">
    <h1>Log in to NoteTrip</h1>

    @if (TempData["info"] != null)
    {
        <div class="validation-info">@TempData["info"]</div>
    }

    <form method="post" asp-action="Form">
        <label for="login">Login</label>
        <input type="text" name="login" id="login" class="form-control" required />

        <label for="password">Password</label>
        <input type="password" name="password" id="password" class="form-control" required />

        <button type="submit" class="btn btn-primary">Log in</button>
    </form>

    <a href="/Account/Create" class="register-link">Create Account</a>
</div>
